# Est치gio 1: Construir o Rob칪
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build-env
WORKDIR /app

# Copia tudo e compila
COPY . ./
RUN dotnet restore
RUN dotnet publish -c Release -o out

# Est치gio 2: Rodar o Rob칪 (Leve)
FROM mcr.microsoft.com/dotnet/runtime:8.0
WORKDIR /app

# Pega o rob칪 pronto do est치gio anterior
COPY --from=build-env /app/out .

# 游녢 A M츼GICA: Traz o login e d치 permiss칚o TOTAL para leitura e escrita
COPY WTelegram.session ./
RUN chmod 666 WTelegram.session

# Cria a pasta de dados (s칩 por garantia)
RUN mkdir -p /app/data

# Comando para iniciar
ENTRYPOINT ["dotnet", "AchadinhosBot.dll"]