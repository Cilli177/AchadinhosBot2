# EstÃ¡gio 1: Construir
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build-env
WORKDIR /app
COPY . ./
RUN dotnet restore
RUN dotnet publish -c Release -o out

# EstÃ¡gio 2: Rodar com Poderes Totais
FROM mcr.microsoft.com/dotnet/runtime:8.0
WORKDIR /app
COPY --from=build-env /app/out .

# ðŸ‘‡ PREPARAÃ‡ÃƒO PARA SESSÃƒO EM PRODUÃ‡ÃƒO ðŸ‘‡
# Copia o arquivo de sessÃ£o Base64 se existir
COPY WTelegram.session.b64 ./ 2>/dev/null || true

USER root
RUN mkdir -p /tmp && chmod 777 /tmp

# Comando para iniciar
ENTRYPOINT ["dotnet", "AchadinhosBot.dll"]